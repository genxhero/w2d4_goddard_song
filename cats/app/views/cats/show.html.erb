<h1><%= @cat.name %></h1>

<table style="border: 1px solid black">
  <tr style="border: 1px solid black">
    <th style="border: 1px solid black">Attribute</th>
    <th style="border: 1px solid black">Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
    <tr style="border: 1px solid black">
    <td style="border: 1px solid black"><%= attr_name %></td>
      <td style="border: 1px solid black"><%= @cat.send(attr_name) %></td>
    </tr>
  <% end %>
</table>

    <p> <%= @cat.description %>    </p>

<a href="<%= edit_cat_url(@cat) %>">Edit <%= @cat.name %></a>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Request By</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.rental_requests.order('start_date').each do |req| %>
    <%= render 'req_tr', req: req, cat: @cat %>
  <% end %>
</table>
